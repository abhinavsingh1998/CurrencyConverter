<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/margin_size_10"
        android:layout_marginHorizontal="@dimen/margin_size_10">


        <TextView
            android:id="@+id/base_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textSize="@dimen/text_size_25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_size_10"
            android:layout_marginStart="@dimen/margin_size_40"/>

        <TextView
            android:id="@+id/target_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR"
            android:textSize="@dimen/text_size_25"
            android:layout_marginEnd="@dimen/margin_size_40"
            app:layout_constraintBottom_toBottomOf="@id/base_currency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/base_currency" />

        <TextView
            android:id="@+id/base_ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_15"
            android:layout_marginBottom="@dimen/margin_size_10"
            android:text="100"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/base_currency"
            app:layout_constraintStart_toStartOf="@id/base_currency"
            app:layout_constraintTop_toBottomOf="@id/base_currency" />

        <TextView
            android:id="@+id/target_ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_15"
            android:layout_marginBottom="@dimen/margin_size_10"
            android:text="100"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/target_currency"
            app:layout_constraintStart_toStartOf="@+id/target_currency"
            app:layout_constraintTop_toBottomOf="@id/base_currency" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>